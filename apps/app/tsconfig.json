{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "es2017",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
	},
	"include": ["./**/*.d.ts", "./**/*.ts", "./**/*.js", "./**/*.svelte"],
	"exclude": ["dist"]
}

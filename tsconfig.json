{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "es2017",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"baseUrl": "./interface",
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"paths": {
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@stores/*": ["stores/*"],
			"@lib/*": ["lib/*"]
		}
	},
	"include": ["interface/**/*.d.ts", "interface/**/*.ts", "interface/**/*.js", "interface/**/*.svelte"],
	"exclude": ["dist"]
}

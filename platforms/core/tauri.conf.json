{
	"productName": "Cores",
	"version": "../../package.json",
	"identifier": "com.levminer.cores",
	"build": {
		"beforeDevCommand": "npm run dev:app",
		"devUrl": "http://localhost:3000",
		"beforeBuildCommand": "npm run build:app",
		"beforeBundleCommand": "npm run sign ./target/release/Cores.exe",
		"frontendDist": "../../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Cores",
				"width": 1900,
				"height": 1000,
				"minWidth": 600,
				"minHeight": 500,
				"maximized": true,
				"theme": "Dark",
				"transparent": true,
				"windowEffects": {
					"effects": ["mica"]
				}
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"category": "Utility",
		"publisher": "Levminer",
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
		"windows": {
			"wix": {
				"fragmentPaths": ["wix/service.wxs"],
				"componentRefs": ["ServiceEntry"]
			}
		},
		"resources": ["icons/32x32.png"]
	}
}

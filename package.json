{
	"name": "cores",
	"version": "0.14.0",
	"description": "Modern hardware monitor for Windows.",
	"author": "Levminer",
	"license": "GPL-3.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev:app": "node scripts/buildNumber.cjs alpha true && npm run dev -w app",
		"dev:web": "node scripts/buildNumber.cjs alpha true && npm run dev -w web",
		"build:app": "node scripts/buildNumber.cjs alpha false && npm run build:wasm && npm run build -w app",
		"build:web": "node scripts/buildNumber.cjs alpha false && npm run build:wasm && npm run build -w web",
		"build:library": "cargo build --manifest-path crates/library/Cargo.toml --release && node scripts/copyLib.js",
		"build:wasm": "npx wasm-pack build crates/client --target web --release",
		"check": "npm run check -w app"
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"svelte": "^4.2.9"
	},
	"overrides": {
		"@rgossiaux/svelte-headlessui": {
			"svelte": "$svelte"
		},
		"svelte-chartjs": {
			"svelte": "$svelte"
		}
	},
	"dependencies": {
		"@rgossiaux/svelte-headlessui": "^1.0.2",
		"chart.js": "^4.4.1",
		"chartjs-plugin-stacked100": "^1.5.2",
		"lucide-svelte": "^0.294.0",
		"svelte-bootstrap-icons": "^3.1.0",
		"svelte-chartjs": "^3.1.2",
		"ui": "*"
	}
}
